<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.webConfig" version="1.0" bundle="org.nuxeo.ecm.webengine.jaxrs">
  <documentation>
  Web configuration.
  @author Bogdan Stefanescu (bs@nuxeo.com)
  </documentation>

  <extension target="org.nuxeo.ecm.webengine.jaxrs.servlet.config.ServletRegistryComponent" point="servlets">
    <servlet name="jaxrs" path="/nuxeo/site" class="org.nuxeo.ecm.webengine.jaxrs.servlet.JerseyServlet">
      <filters pathInfo="/**/skin/*">
        <!-- no filters defined for paths matching this pattern -->
      </filters>
      <filters>
        <filter class="org.nuxeo.ecm.webengine.jaxrs.login.AuthenticationFilter" />
        <filter class="org.nuxeo.ecm.webengine.jaxrs.tx.TransactionFilter" />
        <filter class="org.nuxeo.ecm.webengine.jaxrs.session.SessionCleanupFilter" />
        <filter class="org.nuxeo.ecm.webengine.jaxrs.context.RequestContextFilter" />
      </filters>
    </servlet>  
  </extension>
  
</component>

