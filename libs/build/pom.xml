<?xml version="1.0"?>
<project xmlns="http:/maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http:/www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http:/maven.apache.org/POM/4.0.0 http:/maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.nuxeo.osgi.libs</groupId>
  <name>Nuxeo OSGi Libraries tycho build</name>
  <artifactId>nuxeo-osgi-libs-tycho</artifactId>
  <version>5.4.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <module>../plugins/nuxeo-common</module>
    <module>../plugins/jersey-core</module>
    <module>../plugins/jersey-server</module>
    <module>../plugins/relaxng</module>
    <module>../plugins/xsom</module>
    <module>../plugins/ezmorph</module>
    <module>../plugins/json</module>
    <module>../plugins/jexl</module>
    <module>../plugins/geronimo-components-connector</module>
    <module>../plugins/geronimo-components-transaction</module>
    <module>../plugins/geronimo-specs-connector</module>
    <module>../plugins/dom4j</module>
    <module>../plugins/freemarker</module>
    <module>../plugins/javasimon</module>
    <module>../plugins/joda-time</module>
    <module>../plugins/mvel2</module>
    <module>../plugins/wem</module>
    <module>../plugins/xstream</module>
    <module>../plugins/postgresql</module>
    <!-- start OpenCMIS -->
    <module>../plugins/antlr-runtime</module>
    <module>../plugins/antlr</module>
    <module>../plugins/jaxws-dev</module>
    <module>../plugins/chemistry-opencmis-commons-api</module>
    <module>../plugins/chemistry-opencmis-commons-impl</module>
    <module>../plugins/chemistry-opencmis-client-api</module>
    <module>../plugins/chemistry-opencmis-client-bindings</module>
    <module>../plugins/chemistry-opencmis-client-impl</module>
    <module>../plugins/chemistry-opencmis-server-support</module>
    <module>../plugins/chemistry-opencmis-server-bindings</module>
    <!-- tests -->
    <module>../plugins/jmock</module>
    <module>../plugins/concordion</module>
    <module>../plugins/selenium</module>
    <module>../plugins/nuxeo-runtime-osgi</module>
    <!-- end   OpenCMIS-->
    <module>../features/equinox</module>
    <module>../features/orbit</module>
    <module>../features/nuxeo</module>
    <module>../product</module>
  </modules>

  <scm>
    <connection>scm:hg:http://hg.nuxeo.org/sandbox/nuxeo-osgi</connection>
    <developerConnection>scm:hg:https://hg.nuxeo.org/sandbox/nuxeo-osgi</developerConnection>
    <url>http://hg.nuxeo.org/nuxeo/</url>
  </scm>

  <properties>
    <tycho-version>0.10.0</tycho-version>
    <orbit-version>current</orbit-version>
    <eclipse-version>current</eclipse-version>
    <nuxeo-version>current</nuxeo-version>
    <mirror-url>http://osgi.nuxeo.org/p2/mirrors</mirror-url>
    <equinox-site>${mirror-url}/eclipse/updates/${eclipse-version}</equinox-site>
    <orbit-site>${mirror-url}/eclipse/orbit/${orbit-version}</orbit-site>
  </properties>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>equinox-site</id>
      <layout>p2</layout>
      <url>${equinox-site}</url>
    </repository>
    <repository>
      <id>orbit-site</id>
      <layout>p2</layout>
      <url>${orbit-site}</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <name>Nuxeo virtual release repository</name>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <name>Nuxeo virtual snapshot repository</name>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>always</updatePolicy>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <dependencies>
      <dependency>
        <groupId>commons-codec</groupId>
        <artifactId>commons-codec</artifactId>
        <version>1.4</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.groovy</groupId>
        <artifactId>groovy-all</artifactId>
        <version>1.5.7</version>
      </dependency>
      <!-- required only for developing opencmis bridge in PDE -->
      <dependency>
        <groupId>com.sun.xml.ws</groupId>
        <artifactId>jaxws-rt</artifactId>
        <version>2.2</version>
      </dependency>
      <!-- required only for tests -->
      <dependency>
        <groupId>com.google.inject</groupId>
        <artifactId>guice</artifactId>
        <version>2.0-no_aop</version>
      </dependency>
  </dependencies>

  <build>
    <directory>${project.basedir}/target</directory>

    <plugins>
      <plugin>
    	<groupId>org.codehaus.mojo</groupId>
    	<artifactId>build-helper-maven-plugin</artifactId>
    	<version>1.3</version>
      </plugin>
      <plugin>
        <groupId>org.sonatype.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
    	<version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
          <pomDependencies>consider</pomDependencies>
    	  <ignoreTychoRepositories>true</ignoreTychoRepositories>
    	  <environments>
    	    <environment>
    	      <os>linux</os>
    	      <ws>gtk</ws>
    	      <arch>x86</arch>
    	      <nl>en_US</nl>
    	    </environment>
    	  </environments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.sonatype.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>

  </build>


</project>
