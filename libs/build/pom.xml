<?xml version="1.0"?>
<project xmlns="http:/maven.apache.org/POM/4.0.0"
	 xmlns:xsi="http:/www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http:/maven.apache.org/POM/4.0.0 http:/maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.nuxeo.osgi.thirds</groupId>
  <artifactId>nuxeo-osgi-thirds-tycho</artifactId>
  <version>5.4.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <scm>
    <connection>scm:hg:http://hg.nuxeo.org/sandbox/nuxeo-osgi</connection>
    <developerConnection>scm:hg:https://hg.nuxeo.org/sandbox/nuxeo-osgi</developerConnection>
    <url>http://hg.nuxeo.org/nuxeo/</url>
  </scm>

  <properties>
    <tycho-version>0.10.0</tycho-version>
    <orbit-version>current</orbit-version>
    <eclipse-version>current</eclipse-version>
    <nuxeo-version>current</nuxeo-version>
    <mirror-url>http://localhost/p2/mirrors</mirror-url>
    <equinox-site>${mirror-url}/eclipse/updates/${eclipse-version}</equinox-site>
    <orbit-site>${mirror-url}/eclipse/orbit/${orbit-version}</orbit-site>
  </properties>

  <repositories>
    <repository>
      <id>equinox-site</id>
      <layout>p2</layout>
      <url>${equinox-site}</url>
    </repository>
    <repository>
      <id>orbit-site</id>
      <layout>p2</layout>
      <url>${orbit-site}</url>
    </repository>
  </repositories>
  
  <modules>
    <module>../core-server/plugins/jersey-core</module>
    <module>../core-server/plugins/jersey-server</module>
    <module>../core-server/plugins/relaxng</module>
    <module>../core-server/plugins/xsom</module>
    <module>../core-server/plugins/xstream</module>
    <module>../core-server/plugins/ezmorph</module>
    <module>../core-server/plugins/json</module>
    <module>../core-server/plugins/jexl</module>
    <module>../core-server/plugins/geronimo-components-connector</module>
    <module>../core-server/plugins/geronimo-components-transaction</module>
    <module>../core-server/plugins/geronimo-specs-connector</module>
    <module>../core-server/plugins/groovy</module>
    <module>../core-server/plugins/dom4j</module>
    <module>../core-server/plugins/freemarker</module>
    <module>../core-server/plugins/javasimon</module>
    <module>../core-server/plugins/joda-time</module>
    <module>../core-server/plugins/mvel2</module>
    <module>../core-server/plugins/jcl-over-slf4j</module>
    <module>../core-server/plugins/wem</module>
    <module>../core-server/features/orbit</module>
    <module>../core-server/features/nuxeo</module>
    <module>../product</module>
  </modules>

  <build>
    <directory>${project.basedir}/target</directory>

    <plugins>
      <plugin>
    	<groupId>org.codehaus.mojo</groupId>
    	<artifactId>build-helper-maven-plugin</artifactId>
    	<version>1.3</version>
      </plugin>
      <plugin>
        <groupId>org.sonatype.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
    	<version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
    	  <ignoreTychoRepositories>true</ignoreTychoRepositories>
    	  <environments>
    	    <environment>
    	      <os>linux</os>
    	      <ws>gtk</ws>
    	      <arch>x86</arch>
    	      <nl>en_US</nl>
    	    </environment>
    	  </environments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.sonatype.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho-version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>

  </build>


</project>
