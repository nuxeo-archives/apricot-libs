<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.webConfig" version="1.0" bundle="org.nuxeo.ecm.webengine.jaxrs">
  <documentation>
  Login modules used on JBoss
  @author Bogdan Stefanescu (bs@nuxeo.com)
  </documentation>

  <extension target="org.nuxeo.runtime.server" point="filter">
    <filter context="/nuxeo" path="/*" class="org.nuxeo.ecm.webengine.jaxrs.login.AuthenticationFilter" />
    <filter context="/nuxeo" path="/*" class="org.nuxeo.ecm.webengine.jaxrs.tx.TransactionFilter" />
    <filter context="/nuxeo" path="/*" class="org.nuxeo.ecm.webengine.jaxrs.session.SessionCleanupFilter" />
    <filter context="/nuxeo" path="/*" class="org.nuxeo.ecm.webengine.jaxrs.context.RequestContextFilter" />
  </extension>

  <extension target="org.nuxeo.runtime.server" point="servlet">
    <servlet context="/nuxeo" path="/test" class="org.nuxeo.ecm.webengine.jaxrs.TestServlet" />
    <servlet context="/nuxeo" path="/site/*" class="org.nuxeo.ecm.webengine.jaxrs.servlet.JerseyServlet" />
  </extension>


</component>

