<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.webConfig" version="1.0" bundle="org.nuxeo.ecm.webengine.jaxrs">
  <documentation>
  Web configuration.
  @author Bogdan Stefanescu (bs@nuxeo.com)
  </documentation>

  <extension target="org.nuxeo.ecm.webengine.jaxrs.servlet.config.ServletRegistryComponent" point="servlets">
    <servlet path="/nuxeo/test" class="org.nuxeo.ecm.webengine.jaxrs.servlet.FilteringServlet">
       <param name="servlet">org.nuxeo.ecm.webengine.jaxrs.TestServlet</param>
       <param name="filters">
         org.nuxeo.ecm.webengine.jaxrs.login.AuthenticationFilter,
         org.nuxeo.ecm.webengine.jaxrs.tx.TransactionFilter,
         org.nuxeo.ecm.webengine.jaxrs.session.SessionCleanupFilter,
         org.nuxeo.ecm.webengine.jaxrs.context.RequestContextFilter       
       </param>
    </servlet>
    <servlet path="/nuxeo/site" class="org.nuxeo.ecm.webengine.jaxrs.servlet.FilteringServlet">
      <param name="servlet">org.nuxeo.ecm.webengine.jaxrs.servlet.JerseyServlet</param>
      <param name="filters">
         org.nuxeo.ecm.webengine.jaxrs.login.AuthenticationFilter,
         org.nuxeo.ecm.webengine.jaxrs.tx.TransactionFilter,
         org.nuxeo.ecm.webengine.jaxrs.session.SessionCleanupFilter,
         org.nuxeo.ecm.webengine.jaxrs.context.RequestContextFilter
      </param>
    </servlet>  
  </extension>

</component>

